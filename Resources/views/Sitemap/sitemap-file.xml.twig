<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
	{% for url in urls %}
		{% if url.translations is not defined %}
			<url>
				<loc>{{ url.loc }}</loc>
				<lastmod>{{ url.lastmod }}</lastmod>
				<changefreq>{{ url.changefreq }}</changefreq>
				<priority>{{ url.priority }}</priority>
			</url>
		{% else %}
			{% for translation in url.translations %}
				<url>
					<loc>{{ translation.href }}</loc>
					<lastmod>{{ url.lastmod }}</lastmod>
					<changefreq>{{ url.changefreq }}</changefreq>
					<priority>{{ url.priority }}</priority>

					{% for translation_two in url.translations %}
						<xhtml:link rel="alternate" hreflang="{{ translation_two.hreflang }}" href="{{ translation_two.href }}" />
					{% endfor %}
				</url>
			{% endfor %}
		{% endif %}
	{% endfor %}
</urlset>